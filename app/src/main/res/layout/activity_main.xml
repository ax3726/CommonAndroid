<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.lm.rxtest.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/lly_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.lm.rxtest.ui.MainActivity">

            <EditText
                android:id="@+id/et_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="仔细看字体的颜色"

                android:gravity="center"
                />
            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aa"

                />

            <com.lm.rxtest.widget.SpringProgressHomeView
                android:id="@+id/spring_progress_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"

                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="800dp" />

        </LinearLayout>
    </com.lm.rxtest.widget.MyScrollView>
</layout>